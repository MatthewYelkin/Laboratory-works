Program Lab_2_1;

uses
  System.SysUtils;

Const
    MIN_N = 3;
    MAX_N = 15;
    MIN_C = -100;
    MAX_C = 100;
Var
    I, P, N, LastNum: Integer;
    IsCorrect, IsVipukl: Boolean;
    Coordinates, Vector: Array of Array of Integer;

Begin
    I := 0;
    N := 0;
    P := -1;
    Repeat
        IsCorrect := True;
        Write('¬ведите количество вершин многоугольника: ');
        Try
            Readln(N);
        Except
            Writeln('ќшибка. ¬ведите корректное число');
            IsCorrect := False;
        End;
        If IsCorrect and ((N < MIN_N) or (N > MAX_N)) Then
        Begin
            Writeln('ќшибка. ¬ведите число от 3 до 15');
            IsCorrect := False;
        End;
    Until (IsCorrect);
    SetLength(Coordinates, N);
    LastNum := N - 1;
    For I := 0 to LastNum Do
    Begin
        SetLength(Coordinates[I], 2);
        Repeat
            Write('¬ведите X', (I + 1), ': ');
            IsCorrect := True;
        Try
            Readln(Coordinates[I][0]);
        Except
            Writeln('ќшибка. ¬ведите корректное число');
            IsCorrect := False;
        End;
        If IsCorrect and ((Coordinates[I][0] < MIN_C) or (Coordinates[I][0] > MAX_C)) then
        Begin
            Writeln('ќшибка. ¬ведите число от 1 до 100');
            IsCorrect := False;
        End;
        Until (IsCorrect);

        Repeat
            Write('¬ведите Y', (I + 1), ': ');
            IsCorrect := True;
        Try
            Readln(Coordinates[I][1]);
        Except
            Writeln('ќшибка. ¬ведите корректное число');
            IsCorrect := False;
        End;
        If IsCorrect and ((Coordinates[I][1] < MIN_C) or (Coordinates[I][1] > MAX_C)) then
        Begin
            Writeln('ќшибка. ¬ведите число от 1 до 100');
            IsCorrect := False;
        End;
        Until (IsCorrect);
    End;
    SetLength(Vector, N);
    For I := 0 to LastNum Do
    Begin
        SetLength(Vector[I], 2);
        If I = LastNum Then
        Begin
            Vector[N - 1][0] := Coordinates[0][0] - Coordinates[N - 1][0];
		       	Vector[N - 1][1] := Coordinates[0][1] - Coordinates[N - 1][1];
        End
        Else
        Begin
            Vector[I][0] := Coordinates[I + 1][0] - Coordinates[I][0];
		       	Vector[I][1] := Coordinates[I + 1][1] - Coordinates[I][1];
        End;
        Writeln(Vector[I][0]);
        Writeln(Vector[I][1]);
    End;
    IsVipukl := True;
	  While (IsVipukl) and (I < LastNum) Do
    Begin
		    P := Vector[i][0] * Vector[I + 1][1] - Vector[I][1] * Vector[I + 1][0];
		    If P > 0 Then
			      IsVipukl := False
		    Else
			      Inc(I);
        Writeln(P);
    End;
    Writeln(IsVipukl);
    If IsVipukl Then
	    	Writeln('ћногоугольник выпуклый')
    Else
        Writeln('ћногоугольник невыпуклый');
    Readln;
End.
