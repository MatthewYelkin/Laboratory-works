Program Lab_1_4;

Uses
    System.SysUtils;
Const
    MIN = 1;
    MAX = 100;
Var
    N, I, Sum: Integer;
    IsCorrect: Boolean;
    Arr: array of Integer;

begin
    N := 0;
    Sum := 0;
    Writeln('Вычислить A1+2A2+3A3+...+NAN. Диапазон ввода - от 1 до 100.');
     Repeat
         IsCorrect := True;
         Write('Введите N = ');
         Try
             Readln(N);
         Except
             Writeln('Ошибка. Введите корректное число');
             IsCorrect := False;
         End;
         If IsCorrect and (N < MIN) or (N > MAX) Then
         Begin
             Writeln('Ошибка. Введите число от 1 до 100');
             IsCorrect := False;
         End;

     Until (IsCorrect);
     SetLength(Arr, N);
     For I := 0 to N - 1 Do
     Begin
         repeat
             Write('Введите A', (i + 1), ': ');
             IsCorrect := True;
             try
                 Readln(Arr[I]);
             except
                 Writeln('Ошибка. Введите корректное число');
                 IsCorrect := False;
             end;
             if IsCorrect and (Arr[I] < MIN) or (Arr[I] > MAX) then
             begin
                 Writeln('Ошибка. Введите число от 1 до 100');
                 IsCorrect := False;
             end;
         until (IsCorrect);
     End;
     For I := 0 to N - 1 Do
         Sum := Sum + Arr[i] * (i+1);
     Writeln('Сумма равна: ', Sum);
     Readln;
end.
