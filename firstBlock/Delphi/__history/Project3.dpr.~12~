program Lab_1_2;

uses
    System.SysUtils;

var
    V, D, R: Real;
    N, I: Integer;

begin
    N := 12;
    D := 10;
    R := D / 2;
    Writeln('Определить суммарный объем (л) 12 вложенных друг в друга шаров  со  стенками 5 мм.');
	  Writeln('Внутренний диаметр внутреннего шара равен 10 см. Считать, что шары вкладываются друг');
    Writeln('в друга без зазоров.');
    for I := 1 to N do
    begin
        R := R + 0.5;
    end;
    V := 4 / 3 * PI * R * R * R / 1000;
    Writeln('Сумарный объем =', V:10:3, '(л)');
    Readln;
end.
